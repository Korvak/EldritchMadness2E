{{!-- characteristics container --}}
<div class="em_charact_wrapper em_searchable_wrapper w3-section">
    <h3 class="em_charact_title">characteristics</h3>
    <div class="w3-border em_inputContainer em_halfTopMargin">
        <input id="em_charact_searchbar" class="em_input em_searchbar" data-id="em_charact_search" data-search="startsWith">
        <i class="em_inputIcon fa-solid fa-search"></i>
    </div>
    <div class="em_charact_container em_searchable_container w3-border" style="padding-top:8px;" for="em_charact_search">
        {{#each actor.system.characteristics as |this key|}}
            <div class="em_charact em_searchable w3-border w3-round-large w3-center w3-badge w3-white" data-search="{{i18n this.label}}">
                <p class="em_charact_text hint--bottom" aria-label="{{i18n this.label}}" >{{i18n this.short}}</p>
                <p class="w3-border w3-round-large w3-hover-black em_charact_text em_charact_btn">{{this.value}}</p>
                <p class="w3-badge w3-black em_charact_text">{{this.temp}}</p>
                {{#if (hasRole "KEEPER")}}
                    <div class="dropdown-container">
                        <button class="dropdown-btn em_noShadow" data-id="bar_char" >
                            <i class="dropdown-icon fa-solid fa-chevron-down"></i>
                        </button>
                        <div class="dropdown-content em_hidden w3-border w3-light-gray" for="bar_char">
                            <div class="em_leftContainer">
                                {{!-- value --}}
                                <div class="em_halfSection">
                                    {{!-- labels --}}
                                    <div class="w3-cell-row ">
                                        <div class="w3-cell" style="width:33%">
                                            <p class="w3-center em_input_cell em_halfContainer" style="width:calc(90% - 12px);margin-left:0;">min</p>
                                        </div>
                                        <div class="w3-cell" style="width:33%">
                                            <p class="w3-center em_input_cell em_halfContainer" style="width:calc(90% - 12px);margin-left:0;">value</p>
                                        </div>
                                        <div class="w3-cell" style="width:33%">
                                            <p class="w3-center em_input_cell em_halfContainer" style="width:calc(90% - 12px);margin-left:0;">max</p>
                                        </div>
                                    </div>
                                    {{!-- inputs --}}
                                    <div class="w3-cell-row">
                                        <div class="w3-cell" style="width:33%">
                                            <input id="em_actor_{{key}}Min" class="w3-center em_input_cell em_halfContainer em_inline-field" type="number"
                                            name="actor.system.characteristics.{{key}}.min" value="{{this.min}}" style="width:calc(90% - 12px)">
                                        </div>
                                        <div class="w3-cell" style="width:33%">
                                            <input id="em_actor_{{key}}Value" class="w3-center em_input_cell em_halfContainer em_inline-field" type="number"
                                            name="actor.system.characteristics.{{key}}.value" value="{{this.value}}" style="width:calc(90% - 12px)">
                                        </div>
                                        <div class="w3-cell" style="width:33%">
                                            <input id="em_actor_{{key}}Max" class="w3-center em_input_cell em_halfContainer em_inline-field" type="number"
                                                name="actor.system.characteristics.{{key}}.max" value="{{this.max}}" style="width:calc(90% - 12px)">
                                        </div>
                                    </div>
                                </div>
                                {{!-- temp values --}}
                                <div class="em_halfSection">
                                    {{! -- labels --}}
                                    <div class="w3-cell-row ">
                                        <div class="w3-cell" style="width:33%">
                                            <p class="w3-center em_input_cell em_halfContainer" style="width:calc(90% - 12px)">temp</p>
                                        </div>
                                        <div class="w3-cell" style="width:33%">
                                            <p class="w3-center em_input_cell em_halfContainer" style="width:calc(90% - 12px)">temp max</p>
                                        </div>
                                    </div>
                                    {{!-- inputs --}}
                                    <div class="w3-cell-row">
                                        <div class="w3-cell" style="width:33%">
                                            <input id="em_actor_{{key}}Temp" class="w3-center em_input_cell em_halfContainer em_inline-field" type="number"
                                                name="actor.system.characteristics.{{key}}.temp" value="{{this.temp}}" style="width:calc(90% - 12px)">
                                        </div>
                                        <div class="w3-cell" style="width:33%">
                                            <input id="em_actor_{{key}}MaxTemp" class="w3-center em_input_cell em_halfContainer em_inline-field" type="number"
                                                name="actor.system.characteristics.{{key}}.maxTemp" value="{{this.maxTemp}}" style="width:calc(90% - 12px)">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}
            </div>
        {{/each}}
    </div>
</div>
