<form autocomplete="off">
    {{#if actor.locked}} 
        {{!-- will display the locked interface where you can try to unlock it with a key or lockpick--}}

        {{#if actor.can_lockpick}}
            {{!-- will show the lockpick button--}}

        {{/if}}

    {{else if actor.destroyed}}
        {{!-- will show the destroyed lock image and you cannot access it --}}

    {{else}}
        {{!-- will show the normal inventory interface --}}
        <div class="w3-cell-row w3-white" style="min-height: 100%;">
            <div class="w3-half">
                {{#if (getUser 'character')}}
                    {{renderPartial 'systems/EM2E/templates/partials/actors/inventory-partial.hbs' (getUser 'character') }}

                    <button>
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>



                {{/if}}
            </div>
            <div class="w3-half">
                {{> "systems/EM2E/templates/partials/actors/inventory-partial.hbs"}}
                <button class="em_noShadow em_maxWidth w3-light-grey w3-border w3-button" style="padding : 0 !important">
                    <i class="fa-solid fa-chevron-right"></i>
                </button>
            </div>
        </div>
    {{/if}}
</form>